<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_play_image_Frame_layout">

    <ImageView
        android:id="@+id/image_song_play_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="10"
        android:scaleType="centerCrop"
        tools:src="@drawable/violine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/pause_song_play_item"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/pause"
            android:tint="@color/itemDark" />

        <Button
            android:id="@+id/play_song_play_item"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="50dp"
            android:drawableEnd="@mipmap/play"
            android:background="@android:color/transparent"
            android:tint="@color/itemDark" />

    </LinearLayout>


    <TextView
        android:id="@+id/song_song_play_item"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="SONG NAME"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"/>

</RelativeLayout>